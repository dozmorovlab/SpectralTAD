	Journal = {BMC Syst Biol},
	Journal-Full = {BMC systems biology},
	Mesh = {Animals; Cluster Analysis; Computer Simulation; Drosophila; Gene Expression; Gene Regulatory Networks; Metabolic Networks and Pathways; Models, Biological; Proteins; Terminology as Topic; Yeasts},
